page{
  background-image:linear-gradient(180deg,#CCFFFF 0%,rgba(230, 204, 255, 0.521) 100%);
  margin: 0px;
  padding: 0px;
  height: 200%;
  width: 100%;
  background-repeat: no-repeat;
  background-attachment:fixed;
  
}
.xixi{
  position: absolute;
  left:35%;
  top:20%;
  color: #083ac5 ;
  font-size: large;
  font-weight: bold;
}

.widget__arrow{
    height: 100%;
    width: 100%;
}
.title{
  text-align: center;
  font-size: 25px;
  font-weight: 1000;
  color: 	#33bdf3;
  margin: 5px;
}
.icon{
 height: 20px;
 width: 20px;
}
.flower{
  position:relative;
  width: 30px;
  height: 30px;
  top: 0;
  animation-name: float;
  animation-duration: 15s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}
@keyframes float{
  from{
    top: -25px;
    left: 0;
    transform:rotateX(30deg);
  }
  
  35%{
    left:100%;
    transform:rotateX(90deg);
  }
  60%{
    left: -25px;
    transform:rotateX(45deg);
  }
  to{
    top:100%;
    left:100%;
    transform:rotateX(180deg);
  }
}
.flower1{
  position:relative;
  width: 30px;
  height: 30px;
  top: 0;
  animation-name: float1;
  animation-duration: 15s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}
@keyframes float1{
  from{
    top: -25px;
    left: 100%;
    transform:rotateX(30deg);
  }
  
  35%{
   left: 0;
    transform:rotateX(90deg);
  }
  60%{
    left: 100%;
    transform:rotateX(45deg);
  }
  to{
    top:100%;
    left: 0;
    transform:rotateX(180deg);
  }
}
.annotations{
  text-align: center;
  font-size: 10px;
  color: 	#FF9933;
  margin: 3px;
  font-style: oblique;
}

